{
  "name": "alcpay-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/alcpay-app/src",
  "tags": ["app"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/alcpay-app",
        "index": "apps/alcpay-app/src/index.html",
        "browser": "apps/alcpay-app/src/main.ts",
        "polyfills": ["zone.js"],
        "buildLibsFromSource": true,
        "viteConfig": "apps/alcpay-app/vite.config.ts",
        "watch": true,
        "generatePackageJson": true,
        "includeDevDependenciesInPackageJson": true,
        "skipOverrides": true,
        "tsConfig": "apps/alcpay-app/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/alcpay-app/public"
          }
        ],
        "styles": [
          "libs/theme/src/tailwind.css",
          "apps/alcpay-app/src/styles.css"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
        {
          "type": "initial",
          "maximumWarning": "500kb",
          "maximumError": "1mb"
        },
        {
          "type": "anyComponentStyle",
          "maximumWarning": "4kb",
          "maximumError": "8kb"
          }
        ],
        "outputHashing": "all"
      },
      "development": {
        "optimization": false,
        "extractLicenses": false,
        "sourceMap": true
      }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "alcpay-app:build",
        "port": 4200,
        "buildLibsFromSource": true

      },
      "configurations": {
        "production": {
          "buildTarget": "alcpay-app:build:production"
        },
        "development": {
          "buildTarget": "alcpay-app:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "serve-static": {
      "executor": "@nx/angular:file-server",
      "options": {
        "buildTarget": "alcpay-app:build",
        "port": 4200,
        "staticFilePath": "dist/apps/alcpay-app/browser",
        "spa": true
      },
      "configurations": {
        "production": {
          "buildTarget": "alcpay-app:build:production"
        },
        "development": {
          "buildTarget": "alcpay-app:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@nx/angular:extract-i18n",
      "options": {
        "buildTarget": "alcpay-app:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vitest:executor",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "configFile": "apps/alcpay-app/vitest.config.ts"
      }
    }
  }
}
