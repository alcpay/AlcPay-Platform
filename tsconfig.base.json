{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@alcpay/components": ["libs/components/src/index.ts"],
      "@alcpay/services": ["libs/services/src/index.ts"],
      "@alcpay/theme": ["libs/theme/src/tailwind.css"],
      "@alcpay-app/index": ["apps/alcpay-app/src/index.html"],
      "@alcpay-app/app": ["apps/alcpay-app/src/app/app.component.html"],
      "@alcpay-admin/index": ["apps/alcpay-admin/src/index.html"],
      "@alcpay-admin/app": ["apps/alcpay-admin/src/app/app.component.html"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}